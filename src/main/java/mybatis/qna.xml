<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="qna.model.Qna">

	<select id="getAllData" resultType="MyQna">
		select * from qna
		order by num
		desc
	</select>

	<select id="getTotalCount" resultType="int">
		select count(*) from qna
	</select>

	<insert id="insertData">
		insert into
		qna(num,writer,cate2,cate3,subject,content,reg_date,readcount,ref,re_step,re_level,reply)
		values(q_seq.nextval,#{writer},#{cate2},#{cate3},#{subject},
		#{content},#{reg_date},#{readcount,jdbcType=VARCHAR},q_seq.currval,0,0,'no')
	</insert>
	
	<select id="getData" resultType="MyQna">
		select * from qna
		where num =	#{num}
	</select>

	<update id="updateData">
			update qna 
			set writer=#{writer}, cate1=#{cate1}, cate2=#{cate2}, cate3=#{cate3}, subject=#{subject}, content=#{content}
			where num=#{num}	 
	</update>
	
</mapper>


