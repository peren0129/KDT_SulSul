<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice.model.Notice">

	<select id="getAllData" resultType="MyNotice">
		select * from notice
		<if test="whatColumn == 'subject'">
			where subject like #{keyword}
		</if>
		<if test="whatColumn == 'writer'">
			where writer like #{keyword}
		</if>
		order by num desc
	</select>

	<select id="getTotalCount" resultType="int">
		select count(*) from notice
		<if test="whatColumn == 'subject'">
			where subject like #{keyword}
		</if>
		<if test="whatColumn == 'writer'">
			where writer like #{keyword}
		</if>
	</select>

	<update id="addReadcount">
		update notice
		set readcount = readcount+1
		where num = #{num}
	</update>

	<insert id="insertData">
		insert into
		notice(num,writer,cate,subject,image,content,reg_date,readcount)
		values(nseq.nextval,#{writer},#{cate},#{subject},#{image},
		#{content},#{reg_date},#{readcount,jdbcType=VARCHAR})
	</insert>

	<select id="getData" resultType="MyNotice">
		select * from notice
		where num = #{num}
	</select>

	<update id="updateData">
		update notice
		set writer=#{writer},cate=#{cate},subject=#{subject},content=#{content},image=#{image}
		where num=#{num}
	</update>

	<delete id="deleteData">
		delete notice where num = #{num}
	</delete>



</mapper>


